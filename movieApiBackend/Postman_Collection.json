{
  "info": {
    "name": "Movie App API",
    "description": "Complete API collection for testing Movie App backend endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:7000/api/v1",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "üîê Authentication",
      "item": [
        {
          "name": "User Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"confirmPassword\": \"password123\",\n  \"address\": \"123 Main St, New York\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/signup",
              "host": ["{{base_url}}"],
              "path": ["users", "signup"]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.token) {",
                  "        pm.collectionVariables.set('auth_token', response.data.token);",
                  "        console.log('Token saved:', response.data.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "User Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/login",
              "host": ["{{base_url}}"],
              "path": ["users", "login"]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.token) {",
                  "        pm.collectionVariables.set('auth_token', response.data.token);",
                  "        console.log('Token saved:', response.data.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "üìÇ Categories",
      "item": [
        {
          "name": "Get All Categories",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/movies/categories",
              "host": ["{{base_url}}"],
              "path": ["movies", "categories"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "üé¨ Movies",
      "item": [
        {
          "name": "Get All Movies",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/movies",
              "host": ["{{base_url}}"],
              "path": ["movies"]
            }
          },
          "response": []
        },
        {
          "name": "Get Movies by Category (Action)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/movies?category=Action",
              "host": ["{{base_url}}"],
              "path": ["movies"],
              "query": [
                {
                  "key": "category",
                  "value": "Action"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Search Movies",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/movies?search=action",
              "host": ["{{base_url}}"],
              "path": ["movies"],
              "query": [
                {
                  "key": "search",
                  "value": "action"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Sort Movies by Rating",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/movies?sort=rating",
              "host": ["{{base_url}}"],
              "path": ["movies"],
              "query": [
                {
                  "key": "sort",
                  "value": "rating"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Combined Filters",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/movies?category=Action&search=action&sort=rating",
              "host": ["{{base_url}}"],
              "path": ["movies"],
              "query": [
                {
                  "key": "category",
                  "value": "Action"
                },
                {
                  "key": "search",
                  "value": "action"
                },
                {
                  "key": "sort",
                  "value": "rating"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Single Movie",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/movies/:id",
              "host": ["{{base_url}}"],
              "path": ["movies", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "REPLACE_WITH_ACTUAL_MOVIE_ID",
                  "description": "Replace with actual movie ID from get all movies response"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Upload New Movie",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "title",
                  "value": "The Matrix",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "A computer hacker learns from mysterious rebels about the true nature of his reality.",
                  "type": "text"
                },
                {
                  "key": "category",
                  "value": "Action",
                  "type": "text"
                },
                {
                  "key": "releaseDate",
                  "value": "1999-03-31",
                  "type": "text"
                },
                {
                  "key": "image",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/movies",
              "host": ["{{base_url}}"],
              "path": ["movies"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "‚≠ê Ratings",
      "item": [
        {
          "name": "Rate a Movie",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rating\": 5\n}"
            },
            "url": {
              "raw": "{{base_url}}/movies/:id/rate",
              "host": ["{{base_url}}"],
              "path": ["movies", ":id", "rate"],
              "variable": [
                {
                  "key": "id",
                  "value": "REPLACE_WITH_ACTUAL_MOVIE_ID",
                  "description": "Replace with actual movie ID from get all movies response"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get My Rating",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/movies/:id/my-rating",
              "host": ["{{base_url}}"],
              "path": ["movies", ":id", "my-rating"],
              "variable": [
                {
                  "key": "id",
                  "value": "REPLACE_WITH_ACTUAL_MOVIE_ID",
                  "description": "Replace with actual movie ID from get all movies response"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Movie Ratings",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/movies/:id/ratings",
              "host": ["{{base_url}}"],
              "path": ["movies", ":id", "ratings"],
              "variable": [
                {
                  "key": "id",
                  "value": "REPLACE_WITH_ACTUAL_MOVIE_ID",
                  "description": "Replace with actual movie ID from get all movies response"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "üë§ User Profile",
      "item": [
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users/me",
              "host": ["{{base_url}}"],
              "path": ["users", "me"]
            }
          },
          "response": []
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
